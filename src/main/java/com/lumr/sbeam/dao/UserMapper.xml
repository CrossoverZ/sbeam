<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lumr.sbeam.dao.UserDao">

    <resultMap id="UserMap" type="User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="money" column="money"/>
        <result property="registerDate" column="registerdate"/>
        <result property="isadmin" column="isadmin"/>
        <association property="header" column="id" javaType="Header" select="selectHeader"/>
        <collection property="games" column="id" ofType="Game" select="selectGames"/>
        <collection property="reviews" column="id" ofType="Review" select="selectReviews"/>
    </resultMap>
    <select id="selectHeader" resultType="Header">
        SELECT * FROM header WHERE id = #{id}
    </select>
    <select id="selectGames" resultType="Game">
        SELECT t1.* FROM game as t1 inner JOIN library as t2 WHERE t2.user_id = #{id} AND t1.id = t2.game_id
    </select>
    <select id="selectReviews" resultType="Review">
        SELECT * FROM review WHERE user_id = #{id}
    </select>

    <select id="getUser" parameterType="User" resultMap="UserMap">
        select * from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>
    </select>

    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (name, password, registerdate)
        VALUES (
            #{name}, #{password}, #{registerDate}
        )
    </insert>

    <update id="updateUser" parameterType="User">
        UPDATE user SET
        <if test="name != null">
            name = #{name},
        </if>
        <if test="header != null and header.id != null">
            header_id = #{header.id},
        </if>
        <if test="password != null">
            password = #{password},
        </if>
        <if test="money >= 0">
            money = #{money}
        </if>
        WHERE id = #{id}
    </update>

    <delete id="deleteUser" parameterType="User">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

    <update id="recharge">
        UPDATE user
        SET money = money + #{rmb}
        WHERE id = #{user.id}
    </update>
</mapper>